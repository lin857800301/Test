<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/redd2</item>
        <item name="colorPrimaryDark">@color/redd2</item>
        <item name="colorAccent">@color/redd2</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomToolbarTheme" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/multiple_image_select_toolbarPrimaryText</item>
    </style>

    <!-- 头像选择的背景 -->
    <style name="photobgWindowStyle" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/photo_dialog_choose_bg</item>
    </style>

    <!-- 头像选择 -->
    <style name="choose_photo_animstyle">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>   <!-- 上到下=显示 -->
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>  <!-- 上到下=消失 -->
    </style>

    <!--=======通用弹框主题============-->
    <style name="dialogCommonTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.4</item><!--弹框背景灰度-->
    </style>



    <!--====通用动画======-->
    <style name="commonAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/photo_dialog_in_anim</item>  <!-- 下到上=显示 -->
        <item name="android:windowExitAnimation">@anim/photo_dialog_out_anim</item>   <!-- 下到上=消失 -->
    </style>

    <!--==========自定义进度弹框============-->
    <style name="xProgressDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">false</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">false</item>
        <!--模糊-->
        <item name="android:backgroundDimAmount">0</item><!--弹框背景灰度-->
    </style>

</resources>
