<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/bt_startService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="startService启动方式1"/>
    <Button
        android:id="@+id/bt_endService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stopService服务结束"/>

    <Button
        android:id="@+id/bt_bindService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bindService启动方式2"/>

    <Button
        android:id="@+id/bt_unbindService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unbindService解绑服务"/>

</LinearLayout>