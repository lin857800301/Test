<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:padding="16dp">

    <FrameLayout
        android:id="@+id/cp_list_item_location_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        tools:ignore="UselessParent">

        <co.lujun.androidtagview.TagContainerLayout
            android:id="@+id/tcl_record"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:container_background_color="@color/white"
            app:container_border_color="@color/white"
            app:container_border_width="0dp"
            app:container_enable_drag="false"
            app:tag_background_color="#f5f5f5"
            app:tag_border_color="@color/white"
            app:tag_border_width="1px"
            app:tag_clickable="true"
            app:tag_text_color="#666666"
            app:tag_text_size="14sp"
            app:tag_theme="none"
            app:tag_corner_radius="24dp"
            app:tag_vertical_padding="8dp"
            app:tag_horizontal_padding="16dp"
            app:horizontal_interval="10dp"
            app:vertical_interval="10dp" />

        <TextView
            android:id="@+id/cp_list_item_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/cp_grid_item_bg_s"
            android:gravity="center"
            android:paddingBottom="@dimen/cp_grid_item_padding"
            android:paddingTop="@dimen/cp_grid_item_padding"
            android:text="暂无记录"
            android:textColor="#666666"
            android:textSize="15sp"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>