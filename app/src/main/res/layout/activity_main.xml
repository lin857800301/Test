<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.danqiu.myapplication.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <org.angmarch.views.NiceSpinner
                android:id="@+id/nice_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp" />

            <Button
                android:id="@+id/bt_speech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="语音播报" />

            <Button
                android:id="@+id/bt_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="新手引导1" />

            <Button
                android:id="@+id/bt_getView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="保存截图" />

            <Button
                android:id="@+id/bt_slide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="左右滑动" />

            <Button
                android:id="@+id/bt_jitter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="仿抖音点击红心" />

            <Button
                android:id="@+id/bt_guide2"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="新手引导2" />

            <Button
                android:id="@+id/bt_ontouch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="滑动事件研究" />


            <Button
                android:id="@+id/bt_take"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="相册框架" />
            <Button
                android:id="@+id/bt_MPAndroidChart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="统计图" />
            <Button
                android:id="@+id/bt_excele"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="excele" />
            <Button
                android:id="@+id/bt_annotation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自定义注解" />
            <Button
                android:id="@+id/bt_recycle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="滑动组件RecycleView" />
            <Button
                android:id="@+id/bt_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="大图预览" />
            <Button
                android:id="@+id/bt_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="web" />

            <Button
                android:id="@+id/bt_fresco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="图片框架Fresco" />

            <Button
                android:id="@+id/bt_mp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="播放mp3" />

            <Button
                android:id="@+id/bt_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="弹框" />

            <Button
                android:id="@+id/bt_cu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="云标签"/>

            <Button
                android:id="@+id/bt_update"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="数据绑定库" />

            <Button
                android:id="@+id/bt_loding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="小圆球加载" />

            <Button
                android:id="@+id/bt_Notification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="通知栏" />

            <Button
                android:id="@+id/bt_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="后台服务" />

            <Button
                android:id="@+id/bt_Broadcast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="广播介绍" />

            <Button
                android:id="@+id/bt_pager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3D画廊轮播" />

            <Button
                android:id="@+id/bt_refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="刷新框架" />

            <Button
                android:id="@+id/bt_push"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自动点击" />

            <Button
                android:id="@+id/bt_custom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="自定义文字图片" />

            <Button
                android:id="@+id/bt_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="仿支付宝密码" />
            <Button
                android:id="@+id/bt_event"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="跳转eventBus" />
            <Button
                android:id="@+id/bt_event2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="接收eventbus" />

            <Button
                android:id="@+id/bt_dialogfragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="弹框dialogfragment" />



            <Button
                android:id="@+id/bt_db"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="数据库" />

            <Button
                android:id="@+id/bt_hand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="手控" />

            <Button
                android:id="@+id/bt_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="视频播放" />

            <Button
                android:id="@+id/bt_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="多个_tab" />




        </LinearLayout>
    </ScrollView>

</LinearLayout>
